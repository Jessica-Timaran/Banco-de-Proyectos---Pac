---
import LayoutPrincipal from "../../layouts/LayoutPrincipal.astro";
import BarraPreguntas from "../../Components/BarraPreguntas.astro";
import Grid from "../../Components/Grid.astro";
import BotonPrincipal from "../../Components/BotonPrincipal.astro";
import BotonSegundo from "../../Components/BotonSegundo.astro";
---

<LayoutPrincipal title="">
    <div class="flex justify-center min-h-screen">
        <div class="p-10 w-full max-w-7xl my-10">
            <div class="flex flex-col space-y-8">
                <div class="text-left mb-4">
                    <h1 class="font-josefin-slab text-2xl text-black">
                        Por favor marque “SI” o “NO” en cada pregunta
                    </h1>
                </div>

                <div class="flex justify-center ">
                    <BarraPreguntas Text1="Objetivos" Text2="Si" Text3="No"/>
                </div>
                <div class="text-2xl font-bold mb-2 pl-12">
                    Operación y costos
                </div>

                <Grid Text1="1. ¿El objetivo principal del software es mejorar la eficiencia operativa de su empresa?" id1="termsCheckbox1-grid1" id2="termsCheckbox2-grid1"></Grid>
                <Grid Text1="2. ¿El objetivo principal del software es mejorar la eficiencia operativa de su empresa?" id1="termsCheckbox1-grid2" id2="termsCheckbox2-grid2"></Grid>
                <Grid Text1="3. ¿El objetivo principal del software es mejorar la eficiencia operativa de su empresa?" id1="termsCheckbox1-grid3" id2="termsCheckbox2-grid3"></Grid>
                
                <div class="flex flex-col items-center sm:flex-row justify-end space-y-2 sm:space-y-0 sm:space-x-4">
                    <a href="/Solicitantes/VistaAreas2" class="">
                        <BotonPrincipal Text="Volver" />
                    </a>
                    <a href="/Solicitantes/VistaAlcance" class="flex flex-col items-center sm:flex-row justify-end space-y-2 sm:space-y-0 sm:space-x-4">
                        <BotonSegundo Text="Siguiente" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</LayoutPrincipal>