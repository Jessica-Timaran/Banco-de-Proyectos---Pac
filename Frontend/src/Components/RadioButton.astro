---
interface Props {
  Text: string;
  id: string;
}

const { Text, id } = Astro.props;
---

<div class="flex items-center mr-[16px]">
    <input type="radio" id={id} name="estado" class="form-radio h-5 w-5 focus:ring-Verde checked:bg-Verde">
    <label for={id} class="ml-2 text-sm font-josefin-slab font-semibold text-black">{Text}</label>
</div>

<style>
    input[type="radio"].form-radio:checked {
        background-color: #A3E784 ;
    }
</style>